<%- include('../_partial/_header'); -%>

    <div class="container-fluid container-zeroed">
        <div class="container-fluid container-zeroed-background bg-darkgrey">
            <div
                class="container-fluid container-zeroed-content hvh-80 d-flex flex-column align-items-center justify-content-center">
                <div class="flex-item p-4 bg-offwhite" id="signup">

                    <%- include('../_component/_error.ejs'); %>

                    <form method="post" id="signUpForm">
                        <input type="email" class="form-control bg-darkgrey text-white" name="email"
                            placeholder="Email">
                        <br>
                        <input type="text" class="form-control bg-darkgrey text-white" name="username"
                            placeholder="User name" required>
                        <br>
                        <input type="password" class="form-control bg-darkgrey text-white" name="password"
                            placeholder="Password" required>
                        <br>
                        <input type="password" class="form-control bg-darkgrey text-white" name="confirmPassword"
                            placeholder="Confirm Password" autocomplete="new-password" required>
                        <span name="error"></span>
                        <button type="submit" class="btn btn-dark col-12 mt-3">Sign Up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../_partial/_footer'); -%>