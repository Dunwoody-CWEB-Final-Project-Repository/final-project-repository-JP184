<%- include ("./_partial/_header.ejs") -%>
<div class='container mt-3'>
    <form method="POST" id='myForm' action='/login'>
        <div class='form-group'>
            <label for='InputUsername'>Email Address</label>
            <input name='username' type="email" class='form-control' placeholder='Email'>
        </div>
        <div class='form-group mt-3'>
            <label for='InputPassword'>Password</label>
            <input name='password' type="password" class='form-control' placeholder='Password'>
            <br>
            <span class='alert alert-danger' id='error'>Password incorrect!</span>
        </div>
        <button type='submit' class='btn btn-lg btn-dark mt-5'>Log In</button>
    </form>
</div>
<%- include ("./_partial/_footer.ejs") -%>